## Find the invoices of customers who are from Brazil
SELECT
    c.FirstName,
    c.LastName,
    i.InvoiceId,
    i.InvoiceDate,
    i.BillingCountry
FROM
    chinook.customers c
JOIN
    Chinook.invoices i
ON c.CustomerID = i.CustomerId
WHERE
    BillingCountry = 'Brazil';
    
## Find a unique list of each billing country
SELECT
    DISTINCT BillingCountry
FROM
    chinook.invoices
ORDER BY
    BillingCountry;
    
##Show the invoices associated with each sales agent 
SELECT
    e.FirstName,
    e.LastName,
    c.CustomerId,
    i.InvoiceId
FROM
    chinook.employees e
JOIN
    chinook.customers c
ON e.EmployeeId = c.SupportRepId
JOIN
    chinook.Invoices i
On c.CustomerId = i.CustomerId
ORDER BY 
    e.LastName;
    
##How many invoices were there in 2009?
SELECT
    COUNT(InvoiceId)
FROM
    chinook.invoices
WHERE
    InvoiceDate LIKE '2009%';
    
## What were the total sales for 2009?
SELECT
    SUM(Total)
FROM
    chinook.invoices
WHERE
    InvoiceDate LIKE '2009%';
    
## Show the total sales made by each sales agent
SELECT
    c.SupportRepId,
    e.FirstName,
    e.LastName,
    SUM(i.Total) AS total_sales
FROM
    chinook.employees e
JOIN
    chinook.customers c
ON e.EmployeeId = c.SupportRepId
JOIN
    chinook.Invoices i
On c.CustomerId = i.CustomerId
GROUP BY
    c.SupportRepId,
    e.FirstName,
    e.LastName
ORDER BY
    c.SupportRepId;

## Which sales agent made the most dollars in sales in 2009?
SELECT
    c.SupportRepId,
    e.FirstName,
    e.LastName,
    SUM(i.Total) AS total_sales
FROM
    chinook.employees e
JOIN
    chinook.customers c
ON e.EmployeeId = c.SupportRepId
JOIN
    chinook.Invoices i
On c.CustomerId = i.CustomerId
WHERE
    InvoiceDate LIKE '2009%'
GROUP BY
    c.SupportRepId,
    e.FirstName,
    e.LastName
ORDER BY
    total_sales DESC
LIMIT 1;

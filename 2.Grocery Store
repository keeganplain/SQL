-- Display the database ordered by price
SELECT 
  * 
FROM 
  store
ORDER BY 
  price desc;

-- What is the avg price of items in the dairy section?
SELECT 
  AVG(price)
FROM 
  store
where 
  section='dairy';

-- What are the five most popular items?
SELECT 
  item, 
  price, 
  popularity
FROM 
  store
ORDERY BY 
  popularity DESC
LIMIT 5;
